{
  "extends": "./tsconfig.base.json",
  "include": [
    "client/src/**/*",
    "server/src/**/*",
    "shared/**/*",
    "client/vite.config.ts",
    "client/src/types/*.d.ts",
    "client/CustomFileManager",
    "client/src/setupTests.ts" //Lawrence added for testing
  ],
  "compilerOptions": {
    // ... existing compilerOptions ...
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node","jest"],  //@Larence addded jest for tetsting Removed vite/client as it's causing issues
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "outDir": "./dist",//for testing
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./client/src/*"]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": false,//made flase for testing
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": ["node_modules/@types", "client/src/types"]
  },
  "exclude": [ // <-- Add this exclude array if it doesn't exist
    "node_modules",
    "build",
    "dist"
  ]
}